{{ use('/yii/widgets/LinkPager') }}

<div class="container">
    {{ link_pager_widget({
        'pagination': pages,
    }) }}
    {% for page in modelsPages %}
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <a href="{{ Url.to('sdf') }}">{{ page.title }}</a>
                        </h3>
                    </div>
                    <div class="panel panel-body">
                        <div class="row show-grid">
                            {% for image in page.images %}
                                <div class="col-md-2">
                                    <img src="" style="width: 50px; background-color: yellow;">
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {{ link_pager_widget({
        'pagination': pages,
    }) }}
</div>